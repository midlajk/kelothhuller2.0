    <script>
        $(document).ready(function() {
            $('#all').on('click', function() {
                $('.sales').show();
                $('.purchase').show();
            })
            $('#btnpurchase').on('click', function() {
                $('.sales').toggle();




            });
            $('#btnsales').on('click', function() {
                $('.purchase').toggle();



            });
        })
        $(document).ready(function() {
            var table = $('#dataTable').DataTable({
                columnDefs: [{
                    'targets': 0,
                    type: 'date-euro'
                }],
                order: [0, 'desc'],
            });

            var totalbagsales = 0;
            var totalsalesamount = 0;
            var count = 0;
            var bigprize = 0;

            var totalsaleskg = 0;
            $('#dataTable tbody tr td').each(function() {
                console.log(this)
                if (this.className == 'totalbagsales') {
                    totalbagsales += isNaN(this.innerHTML) ? 0 : parseInt(this.innerHTML);
                }
                if (this.className == 'totalsalesamount') {
                    totalsalesamount += isNaN(this.innerText) ? 0 : parseInt(this.innerText);
                }
                if (this.className == 'totalsaleskg') {
                    totalsaleskg += isNaN(this.innerHTML) ? 0 : parseInt(this.innerHTML);
                }

                if (this.className == 'bigprize') {
                    bigprize += isNaN(this.innerHTML) ? 0 : parseInt(this.innerHTML);
                    count++
                }
            });

            document.getElementById('totalbagsales').innerText = totalbagsales;
            document.getElementById('totalsalesamount').innerText = totalsalesamount;

            document.getElementById('totalamountgot').innerText = totalsaleskg;

            document.getElementById('averageprice').innerText = bigprize / count;
        });
    </script>
