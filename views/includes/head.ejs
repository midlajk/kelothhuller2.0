            position: fixed;
            bottom: 1rem;
            right: 1rem;
            z-index: 999999999;
        }
        
        .floatingButtonInner {
            position: relative;
        }
        
        .floatingButton {
            display: block;
            width: 60px;
            height: 60px;
            text-align: center;
            background: -webkit-linear-gradient(45deg, #7700ff, #0073ff);
