        .floatingButton.open,
        .floatingButton:hover,
        .floatingButton:focus,
        .floatingButton:active {
            opacity: 1;
            color: #fff;
        }
        
        .floatingButton .fa {
            transform: rotate(0deg);
            transition: all 0.4s;
        }
        
        .floatingButton.open .fa {
