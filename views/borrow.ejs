<%- include('./includes/head.ejs') %>


    <div class="container-fluid">

        <!-- Page Heading -->

        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                Borrows and return
                <%if(individual){%>
                    of
                    <%=id%>
                        <%}%>
            </h1>

            <h6>
                <%if(filter){%>
                    From
                    <%=moment(start).format( 'DD-MM-YYYY')%> to
                        <%=moment(end).format( 'DD-MM-YYYY')%>
                            <%}%>
            </h6>
        </div>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a class="float-right btn btn-danger ml-2" href="" href="" data-toggle="modal" data-target="#filtermodel">Filter</a>
                <%if(!individual){%> <a class="btn btn-success" href="/paymentcontroller/borrows">Borrowers List</a>

                    <%}else{%>
                        <a class="btn btn-primary" href="/paymentcontroller/borrows">Manage Borrowal </a>
                        <%}%>
                            <br>
                            <br>
                            <form action="" method="GET" id="checkword">
                                <div id="inputFormRow" class="form-group row">


                                    <div class="col-sm-12 mb-3 mb-sm-0 input-group" id="seller_buyer">
                                        <select class="form-control form-control-user js-example-basic-single" id="list_sellers" onchange="check_user()">
                                <option value="">Search names</option>
                                  <%for(let docs of borrevers){%>
                                    <option value="<%=docs%>"><%=docs%></option>
                                  <%}%>
                             </select>

                                        <div class="input-group-append">
                                            <input type="submit" class="btn btn-primary" value="Search name"></input>
                                        </div>
                                    </div>

                                </div>
                            </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>date</th>
                                <%if(!individual){%>
                                    <th>Name</th>
                                    <%}%>
                                        <th>Amount</th>
                                        <th>Type</th>
                                        <th>Hint</th>
                                        <th>Submit</th>

                            </tr>
                        </thead>
                        <tbody>

                            <form id="utility" action="/paymentcontroller/borrows" method="POST">
                                <tr>
                                    <td><input required autofocus tabindex="1" name="date" class="form-control" style="width: 175px;" type="date" value="<%=todaydate%>" id=""></td>
                                    <%if(!individual){%>
                                        <td><input required autofocus autocomplete="off" class="p-1 form-control" style="width: 200px;" tabIndex="2" type="text" list="billto" name="billto" id=""></td>
                                        <datalist id="billto">  <%for(let docs of borrevers){%>
                                            <option value="<%=docs%>">
                                          <%}%></datalist>
                                        <%}else{%> <input type="hidden" name="sec" value="individual">
                                            <input type="hidden" name="billto" value="<%=id%>">
                                            <%}%>
                                                <td><input autofocus required class="form-control" tabIndex="3" type="number" name="amount" style="width: 125px;"></td>
                                                <td>
                                                    <select id="formaction" required tabindex="4" class="p-1 form-control" style="width: 200px;" name="type">
                                                        <option value="debit">Borrow</option>
                                                        <option value="credit">Return</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <input class="p-1 form-control" style="width: 200px;" tabIndex="5" type="text" name="payment" id=""></td>


                                                <td><button form="utility" tabIndex="6" class="btn btn-primary" id="submit" type="submit">Submit</button>
                                                    <div id="button-spinner" style="margin-left: 10px; width: 25px; height: 25px; display: none" class="spinner-border"></div>
                                                </td>

                                </tr>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <%if(!individual){%>
                                    <th>Name</th>
                                    <%}%>
                                        <th>Amount</th>
                                        <th>Type</th>
                                        <th>Hint</th>
                                        <th>Edit</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <%if(!individual){%>
                                    <th>Date</th>
                                    <th>Total amount </th>
                                    <th colspan="2" id="total" class="badge-info">


                                    </th>

                                    <%}else{%>
                                        <th>Total amount </th>
                                        <th colspan="2" id="total" class="badge-info">

                                        </th>
                                        <%}%>
                                            <th>Hint</th>
                                            <th>Edit</th>

                            </tr>
                        </tfoot>
                        <tbody>

                            <%
                            var total = 0;
                            for(var i=0; i < docs.length; i++){
                                total = parseInt(total)+parseInt(docs[i].detail.amount)
                                %>
                                <tr>
                                    <td>
                                        <%= moment(docs[i].detail.date).format( 'DD-MMM-YYYY') %>

                                    </td>
                                    <%if(!individual){%>
                                        <td>
                                            <a href="/paymentcontroller/indivdualborrows/<%=docs[i].name%>">
                                                <%=docs[i].name%>
                                            </a>
                                        </td>
                                        <%}%>

                                            <td>
                                                <%=docs[i].detail.amount%>
                                            </td>
                                            <td>
                                                <%=docs[i].detail.typee%>
                                            </td>
                                            <td>
                                                <%=docs[i].detail.payment%>
                                            </td>
                                            <%if(!individual){%>
                                                <td><a href="/paymentcontroller/deleteborrow/<%=docs[i]._id%>/<%=docs[i].detail._id%>/borrowmanage" onclick="return confirm('Are you sure')" class="btn btn-danger">Delete</a></td>
                                                <%}else{%>
                                                    <td><a href="/paymentcontroller/deleteborrow/<%=docs[i]._id%>/<%=docs[i].detail._id%>/borrow_<%=id%>" onclick="return confirm('Are you sure')" class="btn btn-danger">Delete</a></td>
                                                    <%}%>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div class="modal fade" id="filtermodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Filter dates</h5>
                    <a class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </a>
                </div>
                <div class="modal-body">
                    <form id="form1" action="<%if(individual){%>/paymentcontroller/indivdualborrowsfilter<%}else{%>/paymentcontroller/filterborrows<%}%>" method="POST">
                        <div class="form-group row">
                            <div class="col-sm-12 mb-3 mb-sm-0">
                                <label for="">From date</label>
                                <input type="date" value="<%=todaydate%>" class="form-control form-control-user" id="exampleFirstName" name="sdate" placeholder="Date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 mb-3 mb-sm-0">
                                <label for="">To date</label>
                                <input type="date" value="<%=todaydate%>" name="edate" class="form-control form-control-user" id="exampleFirstName" placeholder="Date">
                            </div>


                        </div>

                        <%if(individual){%>
                            <input type="hidden" name="id" value="<%=id%>">
                            <%}%>
                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" type="submit" form="form1">Apply filter</button>
                </div>
            </div>

        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({

                "ordering": false,

            });
            $('#submit').click(function() {
                $('#submit').hide();
                $('#button-spinner').show();

            });
            total = <%=total%>;
            document.getElementById('total').innerHTML = total.toLocaleString();
        });

        function check_user() {
            var st = document.getElementById("list_sellers").value;
            if (!st) {

            } else {
                var x = document.getElementById("checkword")
                x.action = "/paymentcontroller/indivdualborrows/" + st
            }
        }
    </script>
    <%- include('./includes/end.ejs') %>