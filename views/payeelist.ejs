<%- include('./includes/head.ejs') %>


    <div class="container-fluid">

        <!-- Page Heading -->


        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                Payee List

            </h1>


        </div>
        <div id="sellersum" class="row">

            <!-- Earnings (Monthly) Card Example -->
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Amount paid </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800"><span id="totalpurchasekg"></span></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-rupee-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total amount recieved</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800"><span id="totalpurchasesum"></span></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-rupee-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total amount defference </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800"><span id="totalpurchasepaid"></span></div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-rupee-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a class=" btn btn-primary" href="/getpayments">Payments</a>

                <br>
                <br>

            </div>


            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount recieved</th>
                                <th>Amount paid</th>
                                <th>Deffrence</th>


                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th>Name</th>
                                <th>Amount recieved</th>
                                <th>Amount paid</th>
                                <th>Deffrence</th>

                            </tr>
                        </tfoot>
                        <tbody>

                            <%
                            var totalamountrecieved = 0;
                            var totalamountpaid = 0;
                   
                 
                            for(let dic of docs){
                                totalamountrecieved = parseInt(dic.totalrecieved) + parseInt(totalamountrecieved)
                                totalamountpaid = parseInt(dic.totalpaid) + parseInt(totalamountpaid)
                                
                                %>
                                <tr>

                                    <td>
                                        <a href="/individualpayments/<%=dic.name%>">
                                            <%=dic.name%>
                                        </a>

                                    </td>
                                    <td>
                                        <%=dic.totalrecieved.toLocaleString()%>
                                    </td>
                                    <td>
                                        <%=dic.totalpaid.toLocaleString()%>
                                    </td>

                                    <td>
                                        <%= (parseInt(dic.totalpaid) - parseInt(dic.totalrecieved)).toLocaleString()  %>
                                    </td>

                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({

                "ordering": false,

            });

            totalamountrecieved = <%=totalamountrecieved%>;
            totalamountpaid = <%=totalamountpaid%>;
            remaining = totalamountpaid - totalamountrecieved

            document.getElementById('totalpurchasekg').innerText = totalamountpaid.toLocaleString();
            document.getElementById('totalpurchasesum').innerText = totalamountrecieved.toLocaleString();
            document.getElementById('totalpurchasepaid').innerText = remaining.toLocaleString();

        });
    </script>
    <%- include('./includes/end.ejs') %>