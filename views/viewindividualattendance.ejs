<%- include('./includes/head.ejs') %>
    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Attendance of
                    <%=docs[0].name%> from
                        <%=moment(start).format( 'DD-MM-YYYY')%> to
                            <%=moment(end).format( 'DD-MM-YYYY')%>
                </h6>
                <a class="float-right btn btn-danger ml-2" href="" data-toggle="modal" data-target="#filtermodel">Filter</a>
                <a class="float-right btn btn-info" href="/employee/viewattendance">View All</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                Leaves



                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                        </tfoot>
                        <tbody>

                            <tr>
                                <td>
                                    <% var total = 0;
                                     for(let doc of docs){
                                         total++;
                                          %>

                                        <%=moment(doc.leave.date).format( 'DD-MM-YYYY')%> ,
                                            <%}%>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                    <h6>total absence =
                        <%=total%>
                    </h6>
                </div>
            </div>
        </div>

    </div>
    <div class="modal fade" id="filtermodel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Filter dates</h5>
                    <a class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </a>
                </div>
                <div class="modal-body">
                    <form id="form1" action="/employee/viewattendanceindividual" method="POST">
                        <div class="form-group row">
                            <div class="col-sm-12 mb-3 mb-sm-0">
                                <label for="">From date</label>
                                <input type="date" value="<%=todaydate%>" class="form-control form-control-user" id="exampleFirstName" name="sdate" placeholder="Date">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 mb-3 mb-sm-0">
                                <label for="">To date</label>
                                <input type="date" value="<%=todaydate%>" name="edate" class="form-control form-control-user" id="exampleFirstName" placeholder="Date">
                            </div>
                            <input type="hidden" name="id" value="<%=docs[0].name%>">

                        </div>




                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" type="submit" form="form1">Apply filter</button>
                </div>
            </div>

        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({

                "ordering": false,

            });
        });
    </script>

    <%- include('./includes/end.ejs') %>