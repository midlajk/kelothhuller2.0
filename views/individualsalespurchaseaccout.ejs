        var totalamountpaid = 0;
        var count = 0;
        $('#dataTable tbody tr td').each(function() {

            if (this.className == 'sellerpayment') {
                totalpurchaseamount += isNaN(this.innerText) ? 0 : parseInt(this.innerText);
                count++;
            }
            if (this.className == 'sellerpaid') {
