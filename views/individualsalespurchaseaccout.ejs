        document.getElementById('totalpaid').innerText = totalamountpaid;
        document.getElementById('totalamountremaining').innerText = parseInt(totalpurchaseamount - totalamountpaid);

        document.getElementById('avgpurchase').innerText = parseFloat(totalpurchaseamount / count).toFixed(2);
