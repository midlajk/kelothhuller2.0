            document.getElementById('editamount').value = obj[i].payment.amount
            document.getElementById('editcareoff').value = obj[i].payment.careoff
            document.getElementById('objectid').value = obj[i].id;
            document.getElementById('arrayid').value = obj[i].payment.id;
            document.getElementById('section').value = "purchase"
