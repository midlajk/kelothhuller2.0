    <script>
        $(document).ready(function() {
            $('#btnpurchase').on('click', function() {
                $('.sales').toggle();

                $('#dataTable thead th').each(function(i) {
                    calculateColumn(i);
                });


                function calculateColumn(index) {
                    var total = 0;
                    var flag = true;
                    $('#dataTable tbody tr').each(function() {
                        if ($(this).is(":visible")) {
                            var value = parseInt($('td', this).eq(index).text());
                            if (!isNaN(value)) {
                                total += value;
                            } else {
                                flag = false;
                            }
                        }
                    });
                    if (flag) {
                        $('#dataTable tfoot th').eq(index).text('Total: ' + total);
                    }

                }
            });
            $('#btnsales').on('click', function() {
                $('.purchase').toggle();

                $('#dataTable thead th').each(function(i) {

                    calculateColumn(i);
                });


                function calculateColumn(index) {



                    var total = 0;
                    var flag = true;
                    $('#dataTable tbody tr').each(function() {
                        if ($(this).is(":visible")) {
                            var value = parseInt($('td', this).eq(index).text());
                            if (!isNaN(value)) {
                                total += value;
                            } else {
                                flag = false;
                            }
                        }
                    });
                    if (flag) {
                        $('#dataTable tfoot th').eq(index).text('Total: ' + total);
                    }




                }
            });
        })
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "order": [
                    [0, "desc"]
                ]
            });
        });
    </script>
