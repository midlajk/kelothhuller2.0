        }

        function check_user() {
            var st = document.getElementById("mylistofsellers").value;
            var content = st.split(':');
            var name = content[0];
            var type = content[1];

            var link
            if (type == 'buyer') {
                link = "individualsales"
            } else {
                link = "individualpurchase"
            }
            var x = document.getElementById("check")
            x.href = "/" + link + "/" + name
        }
