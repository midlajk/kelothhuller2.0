<%- include('./includes/head.ejs') %>


    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">List of User
                </h6>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>date</th>
                                <th>Bill to</th>
                                <th>Type</th>
                                <th>Amount</th>

                                <th>Edit</th>

                            </tr>
                        </thead>
                        <tbody>
                            <form id="utility" action="/utilityform" method="POST">
                                <tr>
                                    <td><input required tabindex="1" name="date" class="form-control" type="date" id=""></td>
                                    <td><input required class="p-1 form-control" style="width: 200px;" tabIndex="2" type="text" name="billto" id=""></td>

                                    <td><select class="p-1 form-control" name="payment" id="">
                                        <option value="paid">Paid</option>
                                        <option value="payment">Payment</option>
                                      
                                    </select></td>
                                    <td><input required class="form-control" tabIndex="5" type="number" name="amount" style="width: 125px;"></td>

                                    <td><button form="utility" tabIndex="8" class="btn btn-primary" type="submit">Submit</button></td>

                                </tr>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Bill to</th>
                                <th>Type</th>
                                <th>Amount</th>

                                <th>Edit</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Date</th>
                                <th>Bill to</th>
                                <th>Type</th>
                                <th>Amount</th>

                                <th>Edit</th>

                            </tr>
                        </tfoot>
                        <tbody>

                            <%for(var i=0; i < docs.length; i++){%>
                                <tr>
                                    <td>
                                        <%= moment(docs[i].detail.date).format( 'MMM-DD-YYYY') %>

                                    </td>
                                    <td>
                                        <a href="/individualutility/<%=docs[i]._id%>">
                                            <%=docs[i].name%>
                                        </a>
                                    </td>
                                    <td>
                                        <%=docs[i].detail.payment%>
                                    </td>
                                    <td>
                                        <%=docs[i].detail.amount%>
                                    </td>

                                    <td><a href="" class="btn btn-primary">edit</a></td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).on('keypress', 'input,select', function(e) {
            if (e.which == 13) {
                e.preventDefault();
                var $next = $('[tabIndex=' + (+this.tabIndex + 1) + ']');
                console.log($next.length);
                if (!$next.length) {
                    $next = $('[tabIndex=1]');
                }
                $next.focus().click();
            }
        });
    </script>
    <%- include('./includes/end.ejs') %>