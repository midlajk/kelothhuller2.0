                            <% var bag = 0;
                            var total = 0;
                            var paid = 0;
                            for (var i = 0; i < seller.length; i++){
                                bag = bag + seller[i].deal.kilogram;
                                total = total + seller[i].deal.total;
                                paid = paid + seller[i].deal.paid; %>
