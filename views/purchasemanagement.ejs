<%- include('./includes/head.ejs') %>
    <div class="container-fluid">

        <!-- Page Heading -->


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">കൊടുക്കാനുള്ളത്
                </h6>
                <a href="" style="float: right;" class="btn btn-primary">Detailed</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Seller</th>

                                <th>Bags</th>
                                <th>Kilogram</th>
                                <th>Prize</th>
                                <th>Total</th>
                                <th>Paid</th>
                                <th>Remaining</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Date</th>
                                <th>Seller</th>
                                <th>Bags</th>
                                <th>Kilogram</th>
                                <th>Prize</th>
                                <th>Total</th>
                                <th>Paid</th>
                                <th>Remaining</th>
                                <th>Edit</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            <form id="buyerform" action="/detailedbuyerdata" method="POST">
                                <tr>
                                    <td><input tabindex="1" name="date" class="form-control" type="date" id=""></td>
                                    <td><input class="p-1 form-control" style="width: 200px;" tabIndex="2" type="text" name="buyer" id=""></td>
                                    <td><input class="p-1 form-control" style="width: 100px;" tabIndex="3" type="number" name="bags" id="bags"></td>
                                    <td><input class="form-control" tabIndex="4" type="number" name="kilogram" style="width: 125px;" id="kilogram"></td>
                                    <td><input class="p-1 form-control" tabIndex="5" type="number" style="width: 125px;" name="price" id="price"></td>
                                    <td id="total"></td>
                                    <td><input class="p-1 form-control" style="width: 150px;" tabIndex="6" type="number" name="paid" id="paid"></td>
                                    <td id="remaining"></td>
                                    <td>
                                        <input type="hidden" name="type" value="seperate">
                                        <button form="buyerform" tabIndex="7" class="btn btn-primary" type="submit">Submit</button></td>

                                </tr>
                            </form>

                            <%for (let doc of seller){%>
                                <tr>
                                    <td>
                                        <%= moment(doc.deal.date).format( 'MMM-DD-YYYY') %>

                                    </td>
                                    <td>
                                        <%=doc.name%>
                                    </td>
                                    <td>
                                        <%=doc.deal.bags%>
                                    </td>
                                    <td>
                                        <%=doc.deal.kilogram%>
                                    </td>
                                    <td>
                                        <%=doc.deal.price%>
                                    </td>
                                    <td>
                                        <%=doc.deal.total%>
                                    </td>
                                    <td>
                                        <%=doc.deal.paid%>
                                    </td>
                                    <td>
                                        <%=doc.deal.remaining%>
                                    </td>
                                    <td><a href="" class="btn btn-primary">edit</a></td>
                                </tr>
                                <%}%>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).on('keypress', 'input,select', function(e) {
            if (e.which == 13) {
                e.preventDefault();
                var $next = $('[tabIndex=' + (+this.tabIndex + 1) + ']');
                console.log($next.length);
                if (!$next.length) {
                    $next = $('[tabIndex=1]');
                }
                $next.focus().click();
            }
        });
    </script>

    <%- include('./includes/end.ejs') %>