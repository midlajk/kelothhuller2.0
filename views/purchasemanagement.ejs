    <script type="text/javascript">
        $(".price-control").on("change", function() {
            var kilogram = document.getElementById('kilogram').value;
            var price = document.getElementById('price').value;
            var total = parseInt(kilogram * price);


            document.getElementById('total').value = total;

        });
        $(".price-control").on("change", function() {
            var kilogram = document.getElementById('editkilogram').value;
            var price = document.getElementById('editprize').value;
            var paid = document.getElementById('editpaid').value;
            var total = parseInt(kilogram * price);
            document.getElementById('edittotal').value = total;
            console.log(parseInt(kilogram * price - paid))
            document.getElementById('editremaining').innerText = parseInt(kilogram * price - paid).toLocaleString();
        });
    </script>
    <script type="text/javascript">
        function editpurchase(i) {
            var obj = <%- JSON.stringify(seller) %>;

            document.getElementById("deletebutton").href = "/deletepurchase/" + obj[i]._id + "/" + obj[i].deal._id + "/seperate/" + obj[i].deal.total + "/" + obj[i].deal.paid;
            var today = moment(obj[i].deal.date).format('YYYY-MM-DD');
            document.getElementById("editdate").value = today;


            document.getElementById('editcustomers').innerText = obj[i].name;

            document.getElementById('editbags').value = obj[i].deal.bags;
            document.getElementById('editkilogram').value = obj[i].deal.kilogram;
            document.getElementById('edittotal').value = obj[i].deal.total;
            document.getElementById('editpaid').value = obj[i].deal.paid
            document.getElementById('editremaining').innerText = obj[i].deal.Remaining.toLocaleString();
            document.getElementById('objectid').value = obj[i]._id;
            document.getElementById('arrayid').value = obj[i].deal._id;
            document.getElementById('editoutumn').value = obj[i].deal.outumn;
            document.getElementById('editmoisture').value = obj[i].deal.moisture;
            document.getElementById('editcareoff').value = obj[i].deal.hint;
            document.getElementById('editprize').value = obj[i].deal.price;
            document.getElementById('previoustotal').value = obj[i].deal.total;
            document.getElementById('previouspaid').value = obj[i].deal.paid;
            document.getElementById('thre').value = obj[i].deal.through;
            $('#editmodel').modal('show')
        }

        function check_user() {
            var name = document.getElementById("mylistofsellers").value;
            var x = document.getElementById("check")
            x.href = "individualpurchase/" + name
        }
    </script>
