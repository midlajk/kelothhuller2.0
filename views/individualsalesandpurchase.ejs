            document.getElementById('totalbag').innerHTML = totalkilogram.toLocaleString();
            document.getElementById('totalamount').innerHTML = totalamount.toLocaleString();
            document.getElementById('totalpai').innerHTML = totalpaid.toLocaleString()
            document.getElementById('totalremaining').innerHTML = Remaining.toLocaleString();

        });
