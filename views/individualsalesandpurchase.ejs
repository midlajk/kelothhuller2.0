    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "order ": [
                    [0, "desc "]
                ]
            });

            var totalamount = 0;
            var totalkilogram = 0;
            var totalpaid = 0;
            var Remaining = 0;

            $('#dataTable tbody tr td').each(function() {

                if (this.className == 'totalamount') {
                    totalamount += isNaN(this.innerHTML.replace(/,/g, '')) ? 0 : parseInt(this.innerHTML.replace(/,/g, ''));
                }
                if (this.className == 'totalkilogram') {
                    totalkilogram += isNaN(this.innerText.replace(/,/g, '')) ? 0 : parseInt(this.innerText.replace(/,/g, ''));
                }
                if (this.className == 'totalpaid') {
                    totalpaid += isNaN(this.innerText.replace(/,/g, '')) ? 0 : parseInt(this.innerText.replace(/,/g, ''));
                }



            });
            Remaining = totalamount - totalpaid;

            document.getElementById('totalbagpurchase').innerText = totalkilogram.toLocaleString();
            document.getElementById('totalpurchaseamount').innerText = totalamount.toLocaleString();
            document.getElementById('totalpaid').innerText = totalpaid.toLocaleString()
