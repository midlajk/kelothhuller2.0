<%- include('./includes/head.ejs') %>
    <div class="container-fluid">

        <!-- Page Heading -->

        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Add Lori rent</h1>
                                    <% if (errorMessage) { %>
                                        <p class="text-center">
                                            <%= errorMessage %>
                                        </p>

                                        </p>
                                        <% } %>
                                </div>
                                <form action="/manager/addlorirent" method="POST" id="addloading">
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <label for="">Date</label>
                                            <input autofocus tabindex="2" required type="date" value="<%=todaydate%>" name="date" class="form-control form-control-user" id="exampleFirstName" placeholder="Date">
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <label for="">Lori number</label>
                                            <input tabindex="3" required type="text" name="loari" autocomplete="OFF" list="loadsname" class="form-control form-control-user" id="exampleFirstName" placeholder="Lori number">
                                        </div>
                                        <datalist id="loadsname">
                                            <%for(let docs of doc){%>
                                                <option value="<%=docs%>">
                                                <%}%>
                                          </datalist>

                                    </div>
                                    <div class="form-group ">
                                        <label for="">Load to</label>
                                        <input tabindex="4" type="text" name="loadto" class="form-control form-control-user col-sm-12 mb-3 mb-sm-0" id="exampleInputEmail" placeholder="Load to">
                                    </div>
                                    <div class="form-group ">
                                        <label for="">Rent</label>
                                        <input tabindex="5" required type="number" name="rent" class="form-control form-control-user col-sm-12 mb-3 mb-sm-0" id="exampleInputEmail" placeholder="Rent">
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <label for="">content</label>
                                            <input tabindex="6" type="text" name="content" class="form-control form-control-user" id="exampleFirstName" placeholder="content">
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-3 mb-sm-0">
                                            <label for="">Driver</label>
                                            <input tabindex="7" type="text" name="driver" class="form-control form-control-user" id="exampleFirstName" placeholder="driver">
                                        </div>

                                    </div>





                                    <button tabindex="8" id="submitbtn" type="submit" form="addloading" class="btn btn-primary btn-user btn-block col-sm-12 mb-3 mb-sm-0 ">
            Add Loari Rent
          </button>

                                    <hr>
                                    <a href="/addlorirent" class="btn btn-info btn-user btn-block col-sm-12 mb-3 mb-sm-0 ">
           View Loari Rent
          </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->

        <!-- /.container-fluid -->

    </div>
    <script>
        $(function() {
            var tabindex = 1;
            $('input,select').each(function() {
                if (this.type != "hidden") {
                    var $input = $(this);
                    $input.attr("tabindex", tabindex);
                    tabindex++;
                }
            });
        });
        // remove row
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#submitbtn').click(function() {
                $('#submitbtn').hide();

            });
        });
    </script>
    <%- include('./includes/end.ejs') %>