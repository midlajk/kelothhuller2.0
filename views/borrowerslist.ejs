<%- include('./includes/head.ejs') %>


    <div class="container-fluid">

        <!-- Page Heading -->


        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                Borrow List

            </h1>


        </div>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a class=" btn btn-success" href="/paymentcontroller/borrows">Borrows</a>

                <br>
                <br>

            </div>


            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Remaining Payment</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th>Total Remaining</th>
                                <th id="total"> </th>


                            </tr>
                        </tfoot>
                        <tbody>

                            <%
                            var totalborrow = 0;
             
                   
                 
                            for(let dic of docs){
                                totalborrow = parseInt(dic.totalborrow) + parseInt(totalborrow)
                               
                                %>
                                <tr>

                                    <td>
                                        <a href="/paymentcontroller/indivdualborrows/<%=dic.name%>">

                                            <%=dic.name%>
                                        </a>

                                    </td>
                                    <td>
                                        <%=dic.totalborrow.toLocaleString()%>
                                    </td>

                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({

                "ordering": false,

            });

            totalborrow = <%=totalborrow%>;


            document.getElementById('total').innerText = totalborrow.toLocaleString();


        });
    </script>
    <%- include('./includes/end.ejs') %>