    <script>
        function editdebit(i) {
            var datas = '<%- JSON.stringify(data) %>'
            const obj = JSON.parse(datas);
            if (obj[i].mode == "added") {
                document.getElementById("deletebutton").href = "/deletetransaction/" + obj[i]._id;
                var today = moment(obj[i].date).format('YYYY-MM-DD');
                document.getElementById("editdate").value = today;

                $(function() {
                    var temp = obj[i].paymentmode;;
                    $("#through").val(temp);
                });
                document.getElementById('editcustomers').innerText = "Edit debit";
                document.getElementById('editorder').value = obj[i].comment;
                document.getElementById('editamount').value = obj[i].amount

                document.getElementById('objectid').value = obj[i]._id;

                $("#editform").attr("action", "/editdebittransaction");
            } else {
                document.getElementById("deletebutton").style.display = "none";
                document.getElementById("messagebox").style.display = "block";
                document.getElementById("formbox").style.display = "none";
                document.getElementById("editbutton").style.display = "none";

            }


            $('#editmodel').modal('show')

        }

        function editcredit(i) {
            var datas = '<%- JSON.stringify(data) %>'
            const obj = JSON.parse(datas);
            if (obj[i].mode == "added") {
                document.getElementById("deletebutton").href = "/deletetransaction/" + obj[i]._id;
                document.getElementById('editcustomers').innerText = "Edit Credit";
                var today = moment(obj[i].date).format('YYYY-MM-DD');
                document.getElementById("editdate").value = today;

                $(function() {
                    var temp = obj[i].paymentmode;;
                    $("#through").val(temp);
                });
                document.getElementById('editorder').value = obj[i].comment;
                document.getElementById('editamount').value = obj[i].amount

                document.getElementById('objectid').value = obj[i]._id;

                $("#editform").attr("action", "/editcredittransaction");
            } else {
                document.getElementById("deletebutton").style.display = "none";
                document.getElementById("messagebox").style.display = "block";
                document.getElementById("formbox").style.display = "none";
                document.getElementById("editbutton").style.display = "none";

            }

            $('#editmodel').modal('show')

        }
    </script>


